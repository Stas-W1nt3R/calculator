<Window x:Class="calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор" Height="450" Width="350">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Поле для результата -->
        <TextBox x:Name="Display" 
                 Grid.Row="0" 
                 FontSize="24" 
                 Height="50" 
                 TextAlignment="Right"
                 IsReadOnly="True"
                 Text="0"/>

        <!-- Кнопки -->
        <UniformGrid Grid.Row="1" Rows="5" Columns="4" Margin="0,10,0,0">
            <Button Content="C" FontSize="18" Click="Clear_Click"/>
            <Button Content="←" FontSize="18" Click="Backspace_Click"/>
            <Button Content="%" FontSize="18" Click="Operation_Click"/>
            <Button Content="÷" FontSize="18" Click="Operation_Click"/>

            <Button Content="7" FontSize="18" Click="Number_Click"/>
            <Button Content="8" FontSize="18" Click="Number_Click"/>
            <Button Content="9" FontSize="18" Click="Number_Click"/>
            <Button Content="×" FontSize="18" Click="Operation_Click"/>

            <Button Content="4" FontSize="18" Click="Number_Click"/>
            <Button Content="5" FontSize="18" Click="Number_Click"/>
            <Button Content="6" FontSize="18" Click="Number_Click"/>
            <Button Content="-" FontSize="18" Click="Operation_Click"/>

            <Button Content="1" FontSize="18" Click="Number_Click"/>
            <Button Content="2" FontSize="18" Click="Number_Click"/>
            <Button Content="3" FontSize="18" Click="Number_Click"/>
            <Button Content="+" FontSize="18" Click="Operation_Click"/>

            <Button Content="0" FontSize="18" Click="Number_Click"/>
            <Button Content="," FontSize="18" Click="Number_Click"/>
            <Button Content="=" Grid.ColumnSpan="2" FontSize="18" Click="Equals_Click"/>
        </UniformGrid>
    </Grid>
</Window>
